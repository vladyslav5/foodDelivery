{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*",
      ]
    },
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./config/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}

